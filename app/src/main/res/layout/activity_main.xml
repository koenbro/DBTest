<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
                tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_project"
        android:id="@+id/button_add_project"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_task"
        android:id="@+id/button_add_task"
        android:layout_alignTop="@+id/button_add_project"
        android:layout_toRightOf="@+id/button_add_project"
        android:layout_toEndOf="@+id/button_add_project"/>
    </LinearLayout>
    <TextView
        android:text="@string/projects_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/Peru"
        style="?android:listSeparatorTextViewStyle"/>
    <ListView
        android:id="@+id/projectListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
